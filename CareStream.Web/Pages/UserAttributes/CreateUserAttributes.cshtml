@page
@model CareStream.Web.Pages.UserAttributes.CreateUserAttributesModel
@{
    ViewData["Title"] = "CreateUserAttributes";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">

    <h4>Create an attribute</h4>
    <hr />

    <form method="post">

        <div class="row">

            <div class="row">
                <div class="col-md-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label asp-for="extensionModel.Name" class="control-label">Name*</label>
                </div>
                <div class="col-md-8">
                    <input asp-for="extensionModel.Name" class="form-control" style="width:450px" placeholder="Enter Name" required />
                    <span asp-validation-for="extensionModel.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row" style="margin-top: 10px">
                <div class="col-md-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label asp-for="extensionModel.DataType" class="control-label">Group Type*</label>
                </div>
                <div class="col-md-8">
                    @Html.DropDownListFor(x => x.extensionModel.DataType, (SelectList)ViewData["DataTypes"], new { style = "width: 450px;", @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row" style="margin-top: 10px">
            <div class="col-md-4">
                <label asp-for="extensionModel.Description" class="control-label">Description</label>
            </div>
            <div class="col-md-8">
                @Html.TextAreaFor(x => x.extensionModel.Description, 4, 10, new { style = "width: 450px;margin-left:-10px", placeholder = "Enter Description" })
            </div>
        </div>

        <div class="form-group text-center" style="margin-top: 20px">
            <input type="submit" value="Create" class="btn btn-warning" />
        </div>

    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

