@page
@model CareStream.Web.Pages.Groups.CreateGroupModel
@{
    ViewData["Title"] = "CreateGroup";
}

    <div class="container">

        <h4>Create a New Group</h4>
        <hr />

        <form method="post">

            <div class="row">

                <div class="row">
                    <div class="col-md-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label asp-for="groupModel.DisplayName" class="control-label">Group Name*</label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="groupModel.DisplayName" class="form-control" style="width:450px" placeholder="Enter Group Name" required />
                        <span asp-validation-for="groupModel.DisplayName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row" style="margin-top: 10px">
                    <div class="col-md-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label asp-for="groupModel.GroupType" class="control-label">Group Type*</label>
                    </div>
                    <div class="col-md-8">
                        @Html.DropDownListFor(x => x.groupModel.GroupType, (SelectList)ViewData["GroupType"], new { style = "width: 450px;", @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row" style="margin-top: 10px">
                <div class="col-md-4">
                    <label asp-for="groupModel.Description" class="control-label">Description</label>
                </div>
                <div class="col-md-8">
                    @Html.TextAreaFor(x => x.groupModel.Description, 4, 10, new { style = "width: 450px;margin-left:-10px", placeholder = "Enter Description" })
                </div>
            </div>

            <div class="row" style="margin-top: 10px">
                <div class="col-md-4">
                    <label class="control-label">Owners</label>
                </div>
                <div class="col-md-8">
                    <a href="#" class="text-primary">No Owners Selected</a>
                </div>
            </div>

            <div class="row" style="margin-top: 10px">
                <div class="col-md-4">
                    <label class="control-label">Members</label>
                </div>
                <div class="col-md-8">
                    <a href="#" class="text-primary">No Members Selected</a>
                </div>
            </div>

            <div class="form-group text-center" style="margin-top: 20px">
                <input type="submit" value="Create" class="btn btn-warning" />
            </div>
            
        </form>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}